{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "commonjs",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.1.3",
    "jsonwebtoken": "^9.0.1",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-jwt": "^4.0.4",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.0",
    "koa2-cors": "^2.0.6",
    "koa2-swagger-ui": "^5.8.0",
    "nodemon": "^2.0.22",
    "pg": "^8.11.0",
    "sequelize": "^6.32.0",
    "sequelize-cli": "^6.6.0",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "yarn && yarn sequelize-cli db:migrate",
    "rebuild": "yarn && yarn sequelize-cli db:migrate:undo:all && yarn sequelize-cli db:migrate",
    "mount": "yarn && yarn sequelize-cli db:create && yarn sequelize-cli db:migrate && yarn sequelize-cli db:seed:all && yarn dev",
    "unmount": "yarn sequelize-cli db:drop",
    "remount": "yarn unmount && yarn mount"
  }
}
